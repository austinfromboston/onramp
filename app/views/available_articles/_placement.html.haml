%li.new_placement{ :'data-article-id' => placement.article_id }
  .description
    %h2
      = placement.name
    .date
    - if placement.article.published_at
      Published:
      = placement.article.published_at.strftime('%Y-%m-%d') 
    - else
      Created:
      = placement.article.created_at.strftime('%Y-%m-%d') 
    .status
      (
      = placement.article.status
      )
    - unless placement.new_record?
      .js-only
        (
        = link_to "edit", edit_article_path(placement.article), :class => "edit button remote_edit_article"
        )
  .edit-article-inset.simple.js-staging.ui-block
    %h6.info
      = link_to "Edit Article", edit_article_path(placement.article), :class => "edit button remote_edit_article"
    .clear
    .remote_content

  .js-staging
    - form_for placement, :html => { :class => 'create_placement' } do |f|
      = f.hidden_field :section_id
      = f.hidden_field :article_id


