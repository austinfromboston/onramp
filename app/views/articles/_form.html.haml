%p
  = f.label :title
  = f.text_field :title, :class => 'long title'
%p.advanced
  = f.label :subtitle
  = f.text_field :subtitle, :class => 'long'
%p
  = f.label :blurb, "Summary for lists"
  = f.text_area :blurb, :class => 'minor'
%p
  = f.label :body_html, "Body"
  = f.text_area :body_html, :class => 'fullpage tiny_mce'
%p
  = f.label :status
  = f.select :status, Article::STATUSES

.advanced
  %h3 Sections
  - section_options.each do |(section_name, section_id)|
    = check_box_tag "article[section_ids][]", section_id, f.object.section_ids.include?( section_id ), :id => "article_section_ids_#{section_id}"
    %label{ :for => "article_section_ids_#{section_id}", :class => 'inline' }
      = section_name


.advanced
  %p
    = f.label :metakeywords
    = f.text_area :metakeywords, :class => 'minor'
  %p
    = f.label :metadescription
    = f.text_area :metadescription, :class => 'minor'
    
- content_for :javascript do
  - javascript_tag do
    :plain
      tinyMCE.init( { 
        mode: "textareas", 
        theme: "advanced", 
        editor_selector: "tiny_mce",  
        theme_advanced_toolbar_location:"top", 
        theme_advanced_toolbar_align: "left", 
        theme_advanced_blockformats: "p,div,h1,h2,h3,h4,h5,h6,code",
        theme_advanced_styles: "Title=title;Subheader=subheader;Caption=caption;",
        content_css: '/stylesheets/users.css',
        theme_advanced_buttons1: "bold,italic,underline,strikethrough,|,sup,sub,charmap,|,link,unlink,anchor,image,|,undo,redo,|,cleanup,code", 
        theme_advanced_buttons2: "styleselect,justifyleft,justifycenter,justifyright,|,bullist,numlist,|,outdent,indent,|,hr,removeformat,visualaid",
        theme_advanced_buttons3: ""
        } );
